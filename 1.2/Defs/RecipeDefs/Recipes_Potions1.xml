  <!--==Saturation==-->
  <RecipeDef ParentName="PotionJobString">
    <defName>BrewingSaturation</defName>
    <label>brew Potion of saturation</label>
    <description>Brew Potion of saturation.</description>
    <jobString>Brewing.</jobString>
    <workAmount>1200</workAmount>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <workSkill>Intellectual</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WindDaisyDust</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>PGlassBottle</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>0.25</count>
      </li>
    </ingredients>
    <products>
      <PPotionSaturation>1</PPotionSaturation>
    </products>
    <skillRequirements>
      <Cooking>5</Cooking>
    </skillRequirements>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WindDaisyDust</li>
        <li>PGlassBottle</li>
      </thingDefs>
      <categories>
        <li>PlantFoodRaw</li>
      </categories>
    </fixedIngredientFilter>
    <researchPrerequisite>PSimpleBrewing</researchPrerequisite>
    <recipeUsers>
      <li>PCauldron</li>
    </recipeUsers>
  </RecipeDef>
